<%= bootstrap_form_with model: @interviewer, local: true do |f|%>
    
    <%= render 'form', f: f %>

    <%= f.select :is_active, options_for_select([["Active", true], ["Inactive", false]], selected = @interviewer.is_active), { label: "Account Status" } %> <br>

    <%= f.submit "Update Account", :class => "btn  btn-primary" %>
<% end %>